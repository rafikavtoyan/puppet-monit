---
<% scope['monit::system_fs'].each do |fs| %>
  fs_<%= fs %> :
    path: <%= fs %>
    tests:
      - type: fsflags
      - type: space
        operator: '>'
        value: <%= scope['monit::system_fs_space_usage'] %>
      - type: inode
        operator: '>'
        value: <%= scope['monit::system_fs_inode_usage'] %>
<% end %>
